<main class="px-4 py-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-4 pt-24">

  <div class="lg:col-span-5 flex flex-col gap-7">
    <h1 class="text-4xl font-bold">Your Trusted Marketplace for Tractors and Implements.</h1>
    <div class="flex md:flex-row flex-col gap-4">
      <button class="btn-primary w-fit">
        <%= link_to 'Browse Tractors', tractors_path, method: :get %>
       <i class="fa-solid fa-square-arrow-up-right ml-2"></i>
      </button>
      <button class="btn-outline w-fit">
        <%= link_to 'Sell Your Tractor', new_user_registration_path, method: :get %>
      </button>
    </div>
    <% unless @tractors.empty? %>
      <div class="h-96 relative hover:scale-[1.01] transition duration-300 cursor-pointer">
        <div class="absolute inset-0 bg-black opacity-70 rounded-lg"></div>
        <%= image_tag @tractors.first.images[0], class: "w-full h-full object-cover rounded-lg" %>
        <div class="absolute inset-0 flex flex-col gap-4 justify-end px-4 mb-4">
          <h2 class="text-white text-2xl font-bold">Today's Featured Tractor</h2>
          <p class="text-white">
            <i class="fa-solid fa-tractor mr-2"></i>
            <%= @tractors.first.name %>
          </p>
          <p class="text-white">
            <i class="fa-solid fa-dollar-sign mr-2"></i>
            KES <%= number_with_delimiter @tractors.first.price %>
          </p>
          <button class="btn-secondary w-fit">
            <%= link_to 'View Details', tractor_listing_tractor_path(@tractors.first.tractor_listing, @tractors.first), method: :get %>
            <i class="fa-solid fa-arrow-right ml-2"></i>
          </button>
        </div>
      </div>
    <% else %>
      <div class="h-96 relative hover:scale-[1.01] transition duration-300 cursor-pointer">
        <div class="absolute inset-0 bg-black opacity-60 rounded-lg"></div>
        <%= image_tag "tractor-one.jpg", class: "w-full h-full object-cover rounded-lg" %>
        <div class="absolute inset-0 flex flex-col gap-4 justify-end px-4 mb-4">
          <h2 class="text-white text-2xl font-bold">Today's Featured Tractor</h2>
          <p class="text-white">
            <i class="fa-solid fa-tractor mr-2"></i>
            John Deere 5075E
          </p>
          <p class="text-white">
            <i class="fa-solid fa-dollar-sign mr-2"></i>
            KES 1,350,000
          </p>
          <button class="btn-secondary w-fit">
            <%= link_to 'View Details', new_user_session_path, method: :get %>
            <i class="fa-solid fa-arrow-right ml-2"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <div class="lg:col-span-3 flex flex-col gap-4">
    <div class="lg:mt-16 h-60 relative hover:scale-[1.01] transition duration-300 cursor-pointer">
     <%= image_tag "tractor-three.jpg", class: "w-full h-full object-cover rounded-lg" %>
     <div class="absolute inset-0 bg-black opacity-60 rounded-lg"></div>
     <div class="absolute inset-0 flex flex-col text-white gap-4 justify-end px-4 mb-4">
      <h2 class="text-2xl font-bold">
        Implements & Spare Parts
        <i class="fa-solid fa-arrow-right ml-2"></i>
      </h2>
     </div>
    </div>

    <div class="flex flex-col gap-4 bg-white rounded-lg p-4 h-60 relative shadow hover:scale-[1.01] transition duration-300 cursor-pointer">
      <button class="btn-outline w-fit">
        <%= link_to 'Special Offers', new_user_session_path, method: :get %>
        <i class="fa-solid fa-arrow-right ml-2"></i>
      </button>
      <h2 class="text-2xl font-bold">Save 20%</h2>
      <p>Get 20% off on your first purchase when you sign up for an account using the code <span class="font-bold">NEW20</span></p>
    </div>
  </div>

  <div class="lg:col-span-4">
    <div class="lg:mt-2 relative hover:scale-[1.01] transition duration-300 cursor-pointer">
      <%= image_tag "tractor-two.jpg", class: "w-full h-full object-cover rounded-lg" %>
      <div class="absolute inset-0 bg-black opacity-40 rounded-lg"></div>
      <div class="absolute inset-0 flex flex-col text-white gap-4 justify-start px-4 mt-4 lg:w-3/4">
        <h2 class="text-2xl font-bold">
          Operators & Technicians
        </h2>
        <p>Find skilled operators and technicians for your machinery.</p>
      </div>
    </div>
  </div>

</main>