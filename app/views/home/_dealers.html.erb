<%= form_with url: root_path, method: :get, class: "" do %>
  <div class="flex lg:flex-row flex-col items-center gap-4 my-10 px-4">
     <h1 class="text-4xl font-bold">Our Verified & Trusted Dealers</h1>
     <hr class="w-1/2 border border-black lg:flex hidden" />
   </div>

   <div class="min-h-screen px-4 antialiased flex flex-col gap-4 mt-10 mb-6">

   <% unless @dealers.empty? %>
     <div class="flex">
       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
         <% @dealers.each do |dealer| %>
           <div class="bg-white p-1 rounded shadow-md hover:shadow-lg transition duration-300 min-h-40">
             <div class="flex flex-col gap-4 p-2 text-sm mt-4 ">
               <h2 class="font-bold text-gray-800">
                <%= dealer.name %>
               </h2>
               <div class='flex justify-between'>
                 <p class="text-gray-600 flex items-center gap-2"><strong><i class="fa-solid fa-location-dot"></i></strong><%= dealer.locations.first.address %>, <%= dealer.locations.first.town %></p>
               </div>
               <div class='flex justify-between'>
                 <p class="text-gray-600 flex items-center gap-2"><strong><i class="fa-solid fa-phone"></i></strong><%= dealer.locations.first.phone %></p>
               </div>
             </div>
             <div class="p-2 text-sm mt-5">
               <%= link_to 'See More Locations', dealer_path(dealer), class: "text-indigo-600 hover:underline" %>
             </div>
           </div>
         <% end %>
       </div>
     </div>
   <% else %>
     <div class="flex justify-center items-center bg-gray-100 rounded font-medium uppercase">
       No Dealers.
     </div>
   <% end %>
 </div>

<% end %>